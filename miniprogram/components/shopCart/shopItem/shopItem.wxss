.shopItem_container {
  width: 100%;
  margin-top: 30rpx;
  padding-bottom: 80rpx;
  border-bottom: 1px solid #BDBDBD;
}

.shopItem_checkbox_container {
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-right: 14rpx;
}

.shopItem_inner_container {
  width: 100%;
  display: flex;
  /* flex: 1, 1, 1; */
}

.shopItem_img_container {
  width: 180rpx;
  height: 180rpx;
  flex-shrink: 0;
  margin-right: 14rpx;
}

.shopItem_img_container image {
  width: 100%;
  height: 100%;
}

.shopItem_content_container{
  font-size: .9rem;
  width: 100%;
}
.shopItem_content_title_container{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.shopItem_content_detail_container{
  margin-top: 20rpx;
  font-size: .8rem;
  color: #999999;
}
.shopItem_content_title{
  width: 92%;
  font-size: 1rem;
}