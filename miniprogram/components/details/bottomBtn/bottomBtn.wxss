.bottomBtn_container {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 120rpx;
  background: #fff;
}

.bottomBtn_inner_container {
  width: 100%;
  position: relative;
  height: 100%;
  box-sizing: border-box;
}

.bottomBtn_price_container {
  position: absolute;
  top: -80rpx;
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 1px solid #eee;
  display: flex;
}
.bottomBtn_price_container view{
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 80rpx;
  font-size: .6rem;
}
.bottomBtn_btn_container {
  width: 100%;
  border-top: 1px solid #eee;
  display: flex;
  height: 100%;
}

.bottomBtn_left_btn,
.bottomBtn_center_btn,
.bottomBtn_right_btn {
  width: 33.3%;
  height: 100%;
  cursor: pointer;
}

.bottomBtn_left_btn {
  display: flex;
}

.bottomBtn_left_phone,
.bottomBtn_left_shop {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: .7rem;
}

.bottomBtn_center_btn,
.bottomBtn_right_btn {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: .9rem;
}

.bottomBtn_right_btn {
  background-color: #000;
  color: #fff;
  border-left: 1px solid #fff;
}

.bottomBtn_center_btn {
  background-color: #A1A1A1;
  color: #EFEFEF;
}

.bottomBtn_center_btn button{
  font-size: .9rem;
  color: #EFEFEF;
}