/**app.wxss**/
@import './style/global.wxss';
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

image{
  opacity: 0;
  animation: imgshow 1.5s linear forwards;
}

@keyframes imgshow {
  0%{
    opacity: 0;
  }
  100%{
    opacity: 1;
  }
}


